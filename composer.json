{
    "name": "hiraeth/middleware-encrypt-cookies",
    "description": "PSR-15 middleware to encrypt cookies for the Hiraeth Nano Framework",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "MIT",
    "authors": [
        {
            "name":  "Matthew J. Sahagian",
            "email": "matthew.sahagian@gmail.com",
            "role":  "Lead Architect / Developer"
        }
    ],
    "autoload": {
        "classmap": [
            "src/"
        ]
    },
    "require": {
        "hiraeth/app": "^3.0",
        "dflydev/fig-cookies": "^3.0",
        "defuse/php-encryption": "^2.0",
        "hiraeth/middleware-imp": "^3.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.0",
	"phpunit/phpunit": "^10.0",
        "hiraeth/harmony": "^3.0",
        "hiraeth/diactoros": "^3.0"
    },
    "type": "opus-package",
    "extra": {
        "opus": {
            "hiraeth/app": {
                "config": ""
            }
        }
    },
    "config": {
        "allow-plugins": {
            "imarc/opus": true
        }
    }
}
